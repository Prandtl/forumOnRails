%html
%head
  %title Prandtl'y forum
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  %link{ rel: 'stylesheet',href: 'https://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,400italic&subset=latin,cyrillic', type:'text/css'}
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags
%body
  .wrapper
    %p.notice= notice
    %p.alert= alert

  %header.main_header
    #logo
      %p Prandtl'y Forum
    #controls
      = link_to "New post", new_post_path

  .wrapper
    =yield
